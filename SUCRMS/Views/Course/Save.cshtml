@using SUCRMS.Models
@model SUCRMS.Models.Course
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Course
        <small>Save</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Course</a></li>
        <li class="active">Save</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary col-sm-12">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="box-header with-border">
                        <h3 class="box-title">Add Course</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Save", "Course", FormMethod.Post, new { @class = "form-horizontal", @id = "course" }))
                    {

                        if (ViewBag.Message != null)
                        {
                            if (ViewBag.Message == "Saved")
                            {
                                <div class="col-sm-12"></div>
                                <div class="alert alert-success" id="success-alert">
                                    <button type="button" class="close" data-dismiss="alert">x</button>
                                    <strong>Successfully saved! </strong>
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-12">
                                    <div class="alert alert-error" id="success-alert">
                                        <button type="button" class="close" data-dismiss="alert">x</button>
                                        <strong>Faild save! </strong>
                                        <p>@ViewBag.Message</p>
                                    </div>
                                </div>
                            }

                        }
                        @Html.ValidationSummary(true)
                        <div class="box-body">
                            <div class="col-sm-12">
                                <div class="form-group">

                                    @Html.LabelFor(a => a.Code)
                                    @Html.TextBoxFor(a => a.Code, new {@class = "form-control input-sm"})
                                    @Html.ValidationMessageFor(m => m.Code)
                                </div>
                                <div class="form-group">

                                    @Html.LabelFor(a => a.Name)
                                    @Html.TextBoxFor(a => a.Name, new {@class = "form-control input-sm"})
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Credit)
                                    @Html.TextBoxFor(a => a.Credit, new {@class = "form-control input-sm"})
                                    @Html.ValidationMessageFor(m => m.Credit)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Description)
                                    @Html.TextAreaFor(a => a.Description, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.Description)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.DepartmentId)
                                    @Html.DropDownListFor(a => a.DepartmentId, new SelectList(ViewBag.Department, "Id", "Code"), new {@class = "form-control input-sm"})
                                    @Html.ValidationMessageFor(m => m.DepartmentId)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.SemesterId)
                                    @Html.DropDownListFor(a => a.SemesterId, new SelectList(ViewBag.Semester, "Id", "Name"), new {@class = "form-control input-sm"})
                                    @Html.ValidationMessageFor(m => m.SemesterId)
                                </div>
                                <!-- /.box-body -->
                            </div>

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary btn-sm">Submit</button>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</section>


<script>

    $(document).ready(function () {
        //alert('sdfds');
        $("#course").validate({
            rules: {
                Name: "required",
                Code: {
                    required: true,
                    minlength: 5,
                },
                Credit: {
                    required: true,
                    max: 5.0,
                    min: 0.5
                },
                Description: "required",
                
            },
            messages: {
                Name: "Please Provide Course Name",

                Code: {
                    required: "Please Course Code 5 characters Long!"
                },
                Credit:{
                    required: "Please Course Credit 0.5 to 5.0 !"
            }
            }
        });
    });
</script>










