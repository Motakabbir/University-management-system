@using SUCRMS.Models
@model SUCRMS.Models.Department
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Department 
        <small>Save</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Department</a></li>
        <li class="active">Save</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary col-sm-12">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="box-header with-border">
                        <h3 class="box-title">Add Department</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="department" method="POST">

                        @if (ViewBag.Message != null)
                        {
                            if (ViewBag.Message == "Saved")
                            {
                                <div class="col-sm-12"></div>
                                <div class="alert alert-success" id="success-alert">
                                    <button type="button" class="close" data-dismiss="alert">x</button>
                                    <strong>Successfully saved! </strong>
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-12">
                                    <div class="alert alert-error" id="success-alert">
                                        <button type="button" class="close" data-dismiss="alert">x</button>
                                        <strong>Faild save! </strong>
                                        <p>@ViewBag.Message</p>
                                    </div>
                                </div>
                            }

                        }
                        @Html.ValidationSummary(true)
                        <div class="box-body">
                            <div class="form-group">

                                <label for="Code">Code</label>
                                <input type="text" class="form-control input-sm" id="Code" name="Code" placeholder="Code">
                                @Html.ValidationMessageFor(m => m.Code)
                            </div>

                            <div class="form-group">

                                <label for="Name">Name</label>
                                <input type="text" class="form-control input-sm" id="Name" name="Name" placeholder="Name">
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                            <!-- /.box-body -->

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                                @Html.ActionLink("Back", "Index", "Department", new { @class = "btn btn-danger btn-sm" })
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>


<script>

    $(document).ready(function () {
        //alert('sdfds');
        $("#department").validate({
            rules: {
                Name: "required",
                Code: {
                    required: true,
                    minlength: 2,
                    maxlength: 7
                }
            },
            messages: {
                Name: "Please Provide Department Name",

                Code: {
                    required: "Please enter a value between 2 to 7 characters!"
                }
            }
        });
    });
</script>








