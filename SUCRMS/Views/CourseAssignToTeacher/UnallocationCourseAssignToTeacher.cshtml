
@{
    ViewBag.Title = "UnallocationCourseAssignToTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Unassign All Courses
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Unassign All Courses</a></li>

    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary col-sm-12">
                <div class="col-sm-8 col-sm-offset-2">

                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("UnallocationCourseAssignToTeacher", "CourseAssignToTeacher", FormMethod.Post, new { @class = "form-horizontal", @id = "unassign" }))
                    {

                        if (ViewBag.Message != null)
                        {
                            if (ViewBag.Message == "Unassign Teacher Successfully")
                            {
                                <div class="col-sm-12"></div>
                                <div class="alert alert-success" id="success-alert">
                                    <button type="button" class="close" data-dismiss="alert">x</button>
                                    <strong>Successfully! </strong>
                                    <p>All Courses has been Unassigned</p>
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-12">
                                    <div class="alert alert-error" id="success-alert">
                                        <button type="button" class="close" data-dismiss="alert">x</button>
                                        <strong>Faild! </strong>
                                        <p>@ViewBag.Message</p>
                                    </div>
                                </div>
                            }

                        }
                        @Html.ValidationSummary(true)
                        <div class="box-body">
                            <div class="col-sm-12 text-center" style="padding: 20px">
                                <button type="submit" class="btn btn-danger btn-Lg" onclick="Submit();">Unassign All Courses </button>
                            </div>

                            <div class="box-footer">


                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</section>

<script type="text/javascript">
    $(document).ready(function () {

        $(function () {
            $("#unassign").submit(function (e) {

                var r = confirm("Are you sure that you want to Unassign all Courses?");
                if (r != true) {
                    e.preventDefault();
                }
            });
        });

    });
</script>


