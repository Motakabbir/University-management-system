@using SUCRMS.Models
@model SUCRMS.Models.Student
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Student
        <small>Save</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Student</a></li>
        <li class="active">Save</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary col-sm-12">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="box-header with-border">
                        <h3 class="box-title">Add Student</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Save", "Student", FormMethod.Post, new { @class = "form-horizontal", @id = "student" }))
                    {

                        if (ViewBag.Message != null)
                        {
                            if (ViewBag.Message1 == "failed")
                            {
                               <div class="col-sm-12">
                                    <div class="alert alert-error" id="success-alert">
                                        <button type="button" class="close" data-dismiss="alert">x</button>
                                        <strong>Save Faild! </strong>
                                        <p>@ViewBag.Message</p>
                                    </div>
                                </div> 
                            }
                            else
                            {
                                <div class="col-sm-12"></div>
                                <div class="alert alert-success" id="success-alert">
                                    <button type="button" class="close" data-dismiss="alert">x</button>
                                    <strong>Successfully Saved! </strong>
                                    
                                </div>
                                <p style="color: green;padding: 10px">@ViewBag.Message</p>
                            }

                        }
                        @Html.ValidationSummary(true)
                        <div class="box-body">
                            <div class="col-sm-12">
                                <div class="form-group">

                                    @Html.LabelFor(model => model.Name)
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>


                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email)
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ContactNo)
                                    @Html.TextBoxFor(model => model.ContactNo, new { @class = "form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.ContactNo)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Date)

                                    @Html.TextBoxFor(model => model.Date, new { @type = "date", @class = "form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.Date)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Address)
                                    @Html.TextAreaFor(a => a.Address, new { @class = "form-control input-sm" })
                                    @Html.ValidationMessageFor(m => m.Address)
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(a => a.DepartmentId)
                                    @Html.DropDownListFor(a => a.DepartmentId, new SelectList(ViewBag.Department, "Id", "Code"), new { @class = "form-control input-sm" })
                                    @Html.ValidationMessageFor(m => m.DepartmentId)
                                </div>

                                <!-- /.box-body -->
                            </div>

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary btn-sm">Submit</button>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</section>


<script>

    $(document).ready(function () {
        //alert('sdfds');
        $("#student").validate({
            rules: {
                Name: "required",
                Address: "required",
                Email: {
                    required: true,
                    email: true,
                    regex: /\b[A-Z0-9._%+-]+@@[A-Z0-9.-]+\.[A-Z]{2,4}\b/i

                },
                //Date: {
                //    required: true,
                //    date: true


                //}

            },
            messages: {
                Name: "Please Provide Name",
                Address: "Please Provide Address Name",
                Email: "Please Provide Email Name"


            }
        });
    });
</script>